{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "plugins": ["node", "security"],
  "extends": ["airbnb-base", "plugin:node/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "func-names": 0,
    "node/no-unpublished-require": 0,
    "import/no-extraneous-dependencies": 0,
    "node/shebang": 0,
    "no-process-exit": 0,
    "prefer-spread": 0,
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "arrow-body-style": [0, "as-needed", {
      "requireReturnForObjectLiteral": true
    }],
    "block-scoped-var": 0,
    "padded-blocks": 0,
    "comma-dangle": ["error", "never"],
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-console": 0,
    "no-alert": 0,
    "no-shadow": 0
  }
}
